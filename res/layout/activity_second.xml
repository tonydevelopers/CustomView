<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:rotate="http://schemas.android.com/apk/res-auto"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
     >  
      
    <Button 
        android:id="@+id/bt_toggle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="switch"
        android:layout_alignParentRight="true"
        android:onClick="switchView"
        />
    <com.example.customview.view.MyTextView   
        android:layout_width="50dp"  
        android:layout_height="wrap_content"   
        android:text="测试文字sdfadf"
        android:gravity="center"
        android:background="#f00" 
        android:visibility="gone"
        />  
  
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f00"
        android:gravity="center"
        android:rotation="0"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test1"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test2"
            />
        <com.example.customview.view.RotateImageView 
            android:id="@+id/rotateImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            rotate:angle="90"
            android:src="@drawable/ic_launcher"
            />
    </LinearLayout>
</RelativeLayout>  